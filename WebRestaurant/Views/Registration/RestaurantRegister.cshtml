@page
@model RestaurantUserViewModel
@{
    ViewData["Title"] = "AQWE Restaurant";
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css">
        <link rel="stylesheet" href="~/css/Register.css">
    </head>
    <body>
        <img src="~/images/9638472.png" alt="AQWE Restaurant" title="AQWE Restaurant"><br>
        <h1>Register to the restaurant system</h1><br>
        <div class="container">
            <form name="registerForm" method="post" action="~/RestaurantREgisterController.cs">
                <label for="customerName">Name </label>
                <input type="text" name="customerName" value="John Doe" title="Type your name" asp-for="@Model.NewUser.GetCustomer().SetName(@customerName)"><br>
                <label for="customerID">ID </label>
                <input type="number" name="customerID" value="0" title="Type your ID" asp-for="@Model.NewUser.GetCustomer().SetId(@customerID)"><br>
                <label title="Enter your DOB as year, month, day" name="customerDOB">Date of birth</label>
                <input type="number" name="customerYear" placeholder="Enter year number" title="Which year are you born in?" asp-for="@Model.NewUser.GetCustomer().GetDob().Year">
                <input type="number" name="customerMonth" placeholder="Enter month number" title="Which month are you born in?" asp-for="@Model.NewUser.GetCustomer().GetDob().Month">
                <input type="number" name="customerDay" placeholder="Enter day number" title="Which day number are you born in?" asp-for="@Model.NewUser.GetCustomer().GetDob().Day"><br>
                <label for="customerEmail">Email </label>
                <input type="email" name="customerEmail" value="someone@example.com" title="Secure your email" asp-for="@Model.NewUser.GetCustomer().SetEmail(@customerEmail)"><br>
                <label for="customerPhone">Phone </label>
                <input type="tel" name="customerPhone" value="+97388888888" title="Just type your phone number" asp-for="@Model.NewUser.GetCustomer().SetPhone(@customerPhone)">
                <label for="customerHistory">Record Created On</label>
                <input type="datetime" name="customerHistory" placeholder="Enter date and time" title="Format: yyy-mm-dd hh:mm:ss">
                <br><label for="customerPassword" title="Secure your password">Password </label>
                <input type="password" name="customerPassword" value="***********" title="Secure your password" asp-for="@Model.NewUser.SetPassword(@customerPassword)"><br>
                <input type="submit" name="customerSubmit" value="Submit" title="Click this"><br>
            </form>
        </div><br>
        <a href="~/Login/RestaurantLogin" name="loginNavigator" title="Changed your mind?">Back to login?</a>
    </body>
</html>